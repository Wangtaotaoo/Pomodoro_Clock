{
  "manifest_version": 3,
  "name": "__MSG_ext_name__",
  "version": "2.0.0",
  "description": "__MSG_ext_description__",
  "default_locale": "zh_CN",
  "permissions": [
    "alarms",
    "storage",
    "notifications",
    "contextMenus"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "commands": {
    "start-pause-timer": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "__MSG_cmd_start_pause__"
    },
    "reset-timer": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "Command+Shift+R"
      },
      "description": "__MSG_cmd_reset__"
    }
  }
}
